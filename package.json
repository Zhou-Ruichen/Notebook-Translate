{
  "name": "ipynb-translator",
  "displayName": "Jupyter Notebook Markdown 英译汉",
  "description": "将Jupyter Notebook中的Markdown单元格从英文翻译为中文",
  "version": "0.2.0",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zhou-Ruichen/Notebook-Translate.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ipynbTranslator.translateMarkdownEnToZh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ipynbTranslator.translateMarkdownEnToZh",
        "title": "IPynb Translator: Translate Notebook"
      },
      {
        "command": "ipynbTranslator.testConnection",
        "title": "IPynb Translator: Test Connection"
      },
      {
        "command": "ipynbTranslator.selectProfile",
        "title": "IPynb Translator: Select Profile"
      },
      {
        "command": "ipynbTranslator.addProfile",
        "title": "IPynb Translator: Add Profile"
      },
      {
        "command": "ipynbTranslator.setApiKey",
        "title": "IPynb Translator: Set API Key"
      },
      {
        "command": "ipynbTranslator.cleanAllTranslations",
        "title": "IPynb Translator: Clean Translations"
      }
    ],
    "configuration": {
      "title": "Jupyter Notebook Markdown 翻译器",
      "properties": {
        "ipynbTranslator.activeProfile": {
          "type": "string",
          "default": "",
          "description": "Current active profile. Please use 'Select Profile' command to switch.",
          "scope": "window",
          "markdownDescription": "Current active profile name. **Do not edit manually.** Use `IPynb Translator: Select Profile` command to switch."
        },
        "ipynbTranslator.profiles": {
          "type": "array",
          "default": [
            {
              "name": "Local Ollama (Default)",
              "provider": "ollama",
              "endpoint": "http://localhost:11434",
              "model": "llama3"
            }
          ],
          "description": "翻译服务配置列表",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "配置名称（唯一标识）"
              },
              "provider": {
                "type": "string",
                "enum": [
                  "openai",
                  "ollama",
                  "baidu"
                ],
                "description": "服务提供商类型"
              },
              "baseUrl": {
                "type": "string",
                "description": "API 端点"
              },
              "model": {
                "type": "string",
                "description": "模型名称"
              },
              "appId": {
                "type": "string",
                "description": "百度翻译 APP ID"
              },
              "customPrompt": {
                "type": "string",
                "description": "自定义 System Prompt (可选)",
                "markdownDescription": "Custom System Prompt to override the default translation instructions."
              }
            },
            "required": [
              "name",
              "provider"
            ]
          }
        },
        "ipynbTranslator.translationMode": {
          "type": "string",
          "enum": [
            "replace",
            "bilingual"
          ],
          "default": "bilingual",
          "description": "翻译模式：replace（替换原文）或 bilingual（双语对照）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.x",
    "typescript": "^4.3.2"
  }
}
